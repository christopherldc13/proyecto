<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.proyecto.fragments.HomeFragment"
        android:label="Principal"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.proyecto.fragments.RegisterFragment"
        android:label="Registrar"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_subjectRegisterFragment"
            app:destination="@id/subjectRegisterFragment" />
    </fragment>

    <fragment
        android:id="@+id/viewDataFragment"
        android:name="com.example.proyecto.fragments.ViewDataFragment"
        android:label="Listado"
        tools:layout="@layout/fragment_view_data" />

    <fragment
        android:id="@+id/statsFragment"
        android:name="com.example.proyecto.fragments.StatsFragment"
        android:label="Estadísticas"
        tools:layout="@layout/fragment_stats" />

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.proyecto.fragments.AboutFragment"
        android:label="Acerca de"
        tools:layout="@layout/fragment_about" />

    <fragment
        android:id="@+id/subjectRegisterFragment"
        android:name="com.example.proyecto.fragments.SubjectRegisterFragment"
        android:label="Registro de Asignatura"
        tools:layout="@layout/fragment_subject_register">
        <!-- NUEVA ACCIÓN AÑADIDA -->
        <action
            android:id="@+id/action_subjectRegisterFragment_to_subjectListFragment"
            app:destination="@id/subjectListFragment" />
    </fragment>

    <fragment
        android:id="@+id/subjectListFragment"
        android:name="com.example.proyecto.fragments.SubjectListFragment"
        android:label="Listado de Asignaturas"
        tools:layout="@layout/fragment_subject_list" />
</navigation>
