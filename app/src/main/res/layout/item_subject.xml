<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutlineVariant"
    app:cardBackgroundColor="?attr/colorSurfaceContainer">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvSubjectName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Programación Móvil" />

        <TextView
            android:id="@+id/tvSubjectCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubjectName"
            tools:text="Código: INF-521" />

        <ImageView
            android:id="@+id/icon_professor"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Icono de profesor"
            app:srcCompat="@drawable/teacher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubjectCode"
            app:tint="?attr/colorOnSurfaceVariant" />

        <TextView
            android:id="@+id/tvSubjectProfessor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            app:layout_constraintStart_toEndOf="@id/icon_professor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/icon_professor"
            app:layout_constraintTop_toTopOf="@id/icon_professor"
            tools:text="Christopher Lantigua" />

        <ImageView
            android:id="@+id/icon_course"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Icono de curso"
            app:srcCompat="@drawable/classroom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_professor"
            app:tint="?attr/colorOnSurfaceVariant" />

        <TextView
            android:id="@+id/tvSubjectCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            app:layout_constraintStart_toEndOf="@id/icon_course"
            app:layout_constraintBottom_toBottomOf="@id/icon_course"
            app:layout_constraintTop_toTopOf="@id/icon_course"
            tools:text="Curso: J202" />

        <ImageView
            android:id="@+id/icon_modality"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Icono de modalidad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_course"
            app:tint="?attr/colorOnSurfaceVariant"
            tools:srcCompat="@drawable/buil" />

        <TextView
            android:id="@+id/tvSubjectModality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            app:layout_constraintStart_toEndOf="@id/icon_modality"
            app:layout_constraintBottom_toBottomOf="@id/icon_modality"
            app:layout_constraintTop_toTopOf="@id/icon_modality"
            tools:text="Presencial" />

        <ImageView
            android:id="@+id/icon_schedule"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Icono de horario"
            app:srcCompat="@drawable/clock"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_modality"
            app:tint="?attr/colorOnSurfaceVariant" />

        <TextView
            android:id="@+id/tvSubjectSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            app:layout_constraintStart_toEndOf="@id/icon_schedule"
            app:layout_constraintBottom_toBottomOf="@id/icon_schedule"
            app:layout_constraintTop_toTopOf="@id/icon_schedule"
            tools:text="Lunes, 08:00 - 10:00" />

        <TextView
            android:id="@+id/tvSubjectDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintStart_toEndOf="@id/tvSubjectSchedule"
            app:layout_constraintBaseline_toBaselineOf="@id/tvSubjectSchedule"
            tools:text="(2h)" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="?attr/colorOutlineVariant"
            app:layout_constraintTop_toBottomOf="@id/icon_schedule"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/actionsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:textColor="@color/rojo_eliminar"
                app:iconTint="@color/rojo_eliminar" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>